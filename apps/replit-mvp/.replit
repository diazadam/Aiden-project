[nix]
channel = "stable-23_05"

[deployment]
run = ["sh", "-c", "python -m pip install -r requirements.txt && python -m uvicorn main:app --host 0.0.0.0 --port 8080"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[[ports]]
localPort = 8080
externalPort = 80